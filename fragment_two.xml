<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9F8BC34A"
    android:layout_gravity="center"
    tools:context=".FragmentTwo">

    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FRAGMENT TWO" />

    <EditText
        android:id="@+id/fragBeditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:text="send to activity"
            android:layout_marginRight="10dp"
            android:id="@+id/fragBbuttonActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="send to Fragment-1"
            android:layout_marginLeft="10dp"
            android:id="@+id/fragBbuttonFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#F44336"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFragB"
        android:hint="message appears here"/>

</LinearLayout>